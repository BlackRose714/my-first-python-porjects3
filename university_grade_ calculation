# Get student's name
# Öğrencinin adını al
name = input("Student name: ")

# Get student's department
# Öğrencinin bölümünü al
department = input("Student's department: ").lower()

if department == "child development":
    # Anne ve Çocuk Sağlığı
    print("Mother and Child Health")
    midterm = float(input("Midterm grade: "))  # Vize notu
    final = float(input("Final grade: "))      # Final notu
    total = midterm * 0.3 + final * 0.7        # Başarı notu hesaplama
    print("Final score =", total)

    if total >= 85:
        print("Letter grade = AA")  # Harf notu
    elif total >= 70:
        print("Letter grade = BA")
    elif total >= 60:
        print("Letter grade = BB")
    elif total >= 50:
        print("Letter grade = CB")
    elif total >= 40:
        print("Letter grade = CC")
    else:
        print("Letter grade = FF")

    # Child Nutrition
    print("Child Nutrition")
    midterm = float(input("Midterm grade: "))
